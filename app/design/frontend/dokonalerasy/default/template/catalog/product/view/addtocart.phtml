    </div>
        <?php endif; ?>
    <div class="form-group">
        <button type="button" title="<?php echo $buttonTitle ?>" id="product-addtocart-button" class="btn btn-primary" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
        <?php echo $this->getChildHtml('', true, true) ?>
    </div>
    </div>
<?php endif; ?>

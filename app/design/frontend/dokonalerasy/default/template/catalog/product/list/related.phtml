                    <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image') ?>"  alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
                    <div class="caption">
                        <p class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></p>
                    </div>
                    <div class="actions">
                        <?php if ($_item->isSaleable()): ?>
                            <p class="text-success"><i class="fa fa-check"></i> Skladem</p>
                            <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                            <button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Cart')) ?>" class="btn btn-primary" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')">
                                <span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
                        <?php else: ?>
                            <p class="text-danger"><span><?php echo $this->__('VyprodÃ¡no') ?></span></p>
                            <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                            <button type="button"
                                    title="<?php echo Mage::helper('core')->quoteEscape($this->__('Add to Cart')) ?>"
                                    disabled class="btn btn-primary"
                                    onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')">
                                <span><span><?php echo $this->__('Add to Cart') ?></span></span></button>
